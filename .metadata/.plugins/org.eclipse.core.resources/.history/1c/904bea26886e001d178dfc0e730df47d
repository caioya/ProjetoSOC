import pages.BuscaBlogPage;
import pages.BuscaCredenciadoPage;

public class Utils extends BuscaCredenciadoPage {

	public Utils(WebDriver driver) {
		super(driver);
	}

	public WebDriver driver;
	BuscaCredenciadoPage buscaCredenciadoPage = new BuscaCredenciadoPage(driver);
	
	busca

	public static void esperar_elemento_estar_presente(By element ,int tempo) {						
		WebDriverWait wait = new WebDriverWait((), tempo);
		wait.until(ExpectedConditions.elementToBeClickable(element));
	}
}
