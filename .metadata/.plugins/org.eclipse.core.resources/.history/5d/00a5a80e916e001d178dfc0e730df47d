package support;

import java.time.Duration;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;
import pages.BuscaCredenciadoPage;

public class Utils {

	public WebDriver driver;
	BuscaCredenciadoPage buscaCredenciadoPage = new BuscaCredenciadoPage(driver);
	
	//criação de construtor do driver
	//para entregar um objeto de um modo específico
	public Utils(WebDriver driver) {
		//this. para diferenciar o parâmetro do atributo
		this.driver = driver;
	}

	public void esperar_elemento_estar_presente(By element ,Duration tempo) {						
		WebDriverWait wait = new WebDriverWait(buscaCredenciadoPage.driver, Duration.ofSeconds(tempo));
		wait.until(ExpectedConditions.elementToBeClickable(element));
	}

}
